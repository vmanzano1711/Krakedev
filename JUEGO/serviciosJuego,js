// 1️⃣ Obtener número aleatorio del 1 al 3
obtenerAleatorio = function () {
    return Math.floor(Math.random() * 3) + 1;
}

// 2️⃣ Generar elemento aleatorio (piedra, papel o tijera)
generarElemento = function () {
    let numero = obtenerAleatorio();
    if (numero === 1) {
        return "piedra";
    } else if (numero === 2) {
        return "papel";
    } else {
        return "tijera";
    }
}

// 3️⃣ Generar ruta de imagen
generarRuta = function (nombre) {
    return "./imagenes/" + nombre + ".png";
}

// 4️⃣ Determinar ganador
// Retorna 0 si empatan, 1 si gana el jugador 1, 2 si gana el jugador 2
determinarGanador = function (eleccionJugador1, eleccionJugador2) {
    if (eleccionJugador1 === eleccionJugador2) {
        return 0;
    }

    if (
        (eleccionJugador1 === "piedra" && eleccionJugador2 === "tijera") ||
        (eleccionJugador1 === "papel" && eleccionJugador2 === "piedra") ||
        (eleccionJugador1 === "tijera" && eleccionJugador2 === "papel")
    ) {
        return 1;
    } else {
        return 2;
    }
}
